{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}

    <h1> Liste des Catégories </h1>

    <a href="{{path('category.new')}}" class="btn btn-success">Ajouter une catégorie</a>
    
    {% if categories | length > 0 %}
        <table>
            <thead>
                <td>Nom de la catégorie</td>
            </thead>
            <tbody>
            {% for category in categories %}
            <tr>
                <td><a href="{{path('category.show',{id:category.id})}}">{{category}}</a> <a href="{{path('category.edit',{id:category.id})}}" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i></a><a href="{{path('category.delete',{id:category.id})}}" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        Il n'y a pas de Module . . .
    {% endif %}
{% endblock %}
