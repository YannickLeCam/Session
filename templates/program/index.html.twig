{% extends 'base.html.twig' %}

{% block title %}Hello ProgramController!{% endblock %}

{% block body %}

    <h1>Liste des programes</h1>

    <a href="{{path('program.new')}}" class="btn btn-succes">Ajouter nouveau programe</a>

    {% if programs | length > 0 %}
    <table>
        <thead>
            <td>Session</td>
            <td>Module</td>
            <td>Dur√©e</td>
            <td>Editer</td>
            <td>Supprimer</td>
        </thead>
        <tbody>
        {% for program in programs %}
        <tr>
            <td>{{program.session}}</td>
            <td>{{program.module}}</td>
            <td>{{program.duration}}</td>
            <td><a href="{{path('program.edit',{id:program.id})}}" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i></a></td>
            <td><a href="{{path('program.delete',{id:program.id})}}" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>Il n'y a pas de Program . . .</p>
    {% endif %}

{% endblock %}
