{% extends 'base.html.twig' %}

{% block title %}Hello ProgramController!{% endblock %}

{% block body %}

    <h1>Liste des programes</h1>

    <a href="{{path('program.new')}}">Ajouter nouveau programe</a>

    {% if programs | length > 0 %}
    <table>
        <thead>
            <td>Session</td>
            <td>Module</td>
            <td>Dur√©e</td>
        </thead>
        <tbody>
        {% for program in programs %}
        <tr>
            <td>{{program.session}}</td>
            <td>{{program.module}}</td>
            <td>{{program.duration}}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>Il n'y a pas de Program . . .</p>
    {% endif %}

{% endblock %}
